<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff01011F"
    android:keepScreenOn="true"
    tools:context=".MainActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_vehicle_frame"
        android:layout_width="400dp"
        android:layout_height="248dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_mfe_frame"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ff01012F"
            >
            <TextView
                android:id="@+id/main_mfe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_vehicle"
                android:textColor="@android:color/white"
                android:text="number"/>
            <TextView
                android:id="@+id/main_mfe_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/main_mfe_name"
                app:layout_constraintBottom_toBottomOf="@id/main_mfe_name"
                android:layout_marginLeft="20dp"
                android:drawablePadding="20dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_station"
                android:textColor="@android:color/white"
                android:text="number"/>

            <ImageView
                android:id="@+id/main_channel_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_mfe_station"
                android:paddingTop="5dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_previous"/>
            <TextView
                android:id="@+id/main_channel_name"
                android:layout_width="200dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/main_channel_previous"
                app:layout_constraintTop_toTopOf="@id/main_channel_previous"
                app:layout_constraintBottom_toBottomOf="@id/main_channel_previous"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:text="++++++"
                android:textColor="#f0fff0"
                android:gravity="center_vertical"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/main_channel_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/main_channel_name"
                app:layout_constraintTop_toBottomOf="@id/main_mfe_station"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/ic_next"/>
            <TextView 	android:id="@+id/main_speaking_name"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/main_channel_next"
                app:layout_constraintTop_toTopOf="@id/main_channel_previous"
                app:layout_constraintBottom_toBottomOf="@id/main_channel_previous"
                android:layout_marginLeft="2dp"
                android:textColor="#f0fff0"
                android:gravity="center_vertical"
                android:textSize="16sp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_sensor_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_mfe_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight = "1"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_sersor_water"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/img_water"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/water3"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/sensor_water_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_water"
                        app:layout_constraintTop_toTopOf="@id/img_water"
                        android:textSize="24sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:text="@string/sensor_water"/>
                    <TextView
                        android:id="@+id/sensor_water_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_water"
                        app:layout_constraintTop_toBottomOf="@id/sensor_water_label"
                        android:layout_marginLeft="20dp"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text="30%"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_sersor_chemical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/img_chemical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/chemical2"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/sensor_chemical_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_chemical"
                        app:layout_constraintTop_toTopOf="@id/img_chemical"
                        android:textSize="24sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:text="@string/sensor_chemical"/>
                    <TextView
                        android:id="@+id/sensor_chemical_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_chemical"
                        app:layout_constraintTop_toBottomOf="@id/sensor_chemical_label"
                        android:layout_marginLeft="20dp"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text="30%"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight = "1"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_sersor_temperature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/img_temperature"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/temperature1"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/sensor_temperature_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_temperature"
                        app:layout_constraintTop_toTopOf="@id/img_temperature"
                        android:textSize="24sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:text="@string/sensor_temperature"/>
                    <TextView
                        android:id="@+id/sensor_temperature_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_temperature"
                        app:layout_constraintTop_toBottomOf="@id/sensor_temperature_label"
                        android:layout_marginLeft="20dp"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text="30%"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_sersor_power"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    >
                    <ImageView
                        android:id="@+id/img_power"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/power3"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/sensor_power_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_power"
                        app:layout_constraintTop_toTopOf="@id/img_power"
                        android:textSize="24sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@android:color/white"
                        android:text="@string/sensor_power"/>
                    <TextView
                        android:id="@+id/sensor_power_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/img_power"
                        app:layout_constraintTop_toBottomOf="@id/sensor_power_label"
                        android:layout_marginLeft="20dp"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text="30%"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_video_frame"
        android:layout_width="400dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_vehicle_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <SurfaceView
            android:id="@+id/main_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_state_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_state_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_recording"/>
            <ImageView
                android:id="@+id/main_state_watching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_watching"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_map_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/main_video_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.amap.api.maps.MapView
            android:id="@+id/main_gdmap"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="60dp"
            >
        </com.amap.api.maps.MapView>

        <include layout="@layout/message_layout"></include>

        <LinearLayout
            android:id="@+id/main_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RelativeLayout
                style="@style/MainBottomBG"
                >
                <ImageView
                    android:id="@+id/main_talk"
                    style="@style/MainBottomButton"
                    android:src="@drawable/ic_talk_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_talk"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="@string/main_talk"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/MainBottomBG"
                >
                <ImageView
                    android:id="@+id/main_gdauto"
                    style="@style/MainBottomButton"
                    android:src="@drawable/ic_gdauto_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_gdauto"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="@string/main_gdauto"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/MainBottomBG"
                >
                <ImageView
                    android:id="@+id/main_history"
                    style="@style/MainBottomButton"
                    android:src="@drawable/history_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_history"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="@string/main_history"/>
            </RelativeLayout>
            <RelativeLayout
                style="@style/MainBottomBG"
                >
                <ImageView
                    android:id="@+id/main_setting"
                    style="@style/MainBottomButton"
                    android:src="@drawable/ic_mysetting_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_setting"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="@string/main_setting"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>