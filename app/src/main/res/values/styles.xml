<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="PopTitle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PopMessage">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="PopButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/bg_pop_btn_posi</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopButtonNega" parent="PopButton">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:background">@drawable/bg_pop_btn_nega</item>
    </style>
    <style name="MainBottomBG">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_bottom_bg</item>
    </style>
    <style name="MainBottomButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="MainInfoText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fff1f2fF</item>
    </style>
    <style name="SettingInfoText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fff1f2fF</item>
    </style>
    <style name="DarkText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ff11121F</item>
    </style>
</resources>
